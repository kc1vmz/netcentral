<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8"><meta name="viewport" content="initial-scale=1, width=device-width">
  <meta name="robots" content="noindex, nofollow">
  <title>Net Central - Net</title>
  <!-- map -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
</head>
<body>
<style>

  body {
      margin: 0px;
      background: #2559a7;
      color: #ddd;
    }

  .navbar {
    overflow: hidden;
    background-color: #2559a7;
    position: fixed; /* Set the navbar to fixed position */
    top: 0; /* Position the navbar at the top of the page */
    width: 100%; /* Full width */
  }

  /* Links inside the navbar */
  .navbar a {
    float: left;
    display: block;
    background-color: #2559a7;
    color: #ddd;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;

    font-family: -apple-system, "Helvetica Neue", Helvetica, sans-serif;
    -webkit-font-smoothing: antialiased;
    font-style: normal;
    letter-spacing: -0.0025em;
    place-items: center;
    text-rendering: optimizeLegibility;
    -webkit-text-size-adjust: 100%;

  }

  /* Change background on mouse-over */
  .navbar a:hover {
    background: #ddd;
    color: black;
  }

  /* Main content */
  .main {
    margin-top: 60px;
    font-family: -apple-system, "Helvetica Neue", Helvetica, sans-serif;
    /* font-size: clamp(1rem, 2.5vw, 2rem); */
    -webkit-font-smoothing: antialiased;
    font-style: normal;
    font-weight: 400;
    letter-spacing: -0.0025em;
    line-height: 1.4;
    min-height: 100vh;
    /* place-items: center; */
    text-rendering: optimizeLegibility;
    -webkit-text-size-adjust: 100%;
  }

  .grid-container {
    display: grid;
    grid-template-columns: 50%  50%;
    margin: 20px;
    gap: 20px;
  }
  .grid-item {
  }

  .line {
    margin : 20px;
  }


    .table-container {
        max-height: 500px;
        overflow-y: auto;
    }
    table {
        border-collapse: collapse;
    }
    thead, tbody {
    }
    thead {
    }
    tbody {
        max-height: 450px;
        overflow-y: auto;
    }
    td {
        padding: 3px;
        text-align: left;
        border: 1px solid #ddd;
        box-sizing: border-box;
        color: #ddd;
        background-color: #2559a7
    }
    th{
        padding: 3px;
        text-align: left;
        border: 1px solid #ddd;
        box-sizing: border-box;
        background-color: #ddd;
        color: #2559a7
    }
    .rowpadded {
        height:20px;
    }
    .column75 {
        float: left;
        width: 75%;
    }
    .column90 {
        float: left;
        width: 90%;
    }
    .column25 {
        float: left;
        width: 25%;
    }
    .column10 {
        float: left;
        width: 10%;
    }
    .main a {
        color: #ddd;
    }

  /* map */
  #map { height: 600px; margin: 5px 5px; } /* Set map height */

  .block {
    border: 1px;
    background: #033684;
    color: white;
    padding: 5px 10px;
    font-size: 16px;
    cursor: pointer;
    text-align: center;
    width: 100px;
    text-decoration: none;
  }

  .block:hover {
    background: #ddd;
    color: black;
  }
</style>

<script>
</script>

<div>
  <div class="navbar">
    <a href="/">Welcome</a>
    <a href="/nets"><b>Active Nets</b></a>
    <a href="/callsigns">Callsigns</a>
    <a href="/stations">Stations</a>
    <a href="/infras">Infrastructure</a>
    <a href="/objects">Objects</a>
    <a href="/weathers">Weather</a>
    <a href="/users">Users</a>
    <a href="/transceivers">Transceivers</a>
    <a href="/activities">Activity Log</a>
    <a href="/archives">Archives</a>
    {{#if token}}
    <a href="/profile">Profile</a>
    <a href="/logoutUser">Logout - {{friendlyName}}</a>
    {{else}}
    <a href="/loginUser">Login</a>
    {{/if}}
  </div>
  <div class="main">
    <div><hr/></div>
    <div style="margin:20px;">
      <h1>Net - {{net.callsign}}</h1>
    </div>

    <div class="line"><hr/></div>

  <div class="grid-container">
    <div class="grid-item">
      <h2>Net information</h2>
      <p>

      <div class="table-container" >
          <br>Name: {{net.name}}
          <br>Description: {{net.description}}
          <br>Voice Frequency: {{net.status}}
          <br>Start time: {{net.prettyStartTime}}
          <br>Started by: {{net.creatorName}}
      </div>
      <br>
      <h2>Participants ({{participantsCount}})</h2>
      <p>

      <table id="participant-list">
        <thead>
          <tr>
            <th>Callsign</th>
            <th>Tactical Callsign</th>
            <th>Check-in time</th>
            <th>Status</th>
            <th>Location</th>
            <th>Voice Frequency</th>
            <th>Electrical Power</th>
            <th>Radio Style</th>
            <th>Transmit Power</th>
          </tr>
        </thead>
        <tbody>
          {{#each participants}}
            <tr id="{{id}}">
              <td>{{callsign}}</td>
              <td>{{tacticalCallsign}}</td>
              <td>{{prettyStartTime}}</td>
              <td>{{status}}</td>
              <td>{{lon}} / {{lat}}</td>
              <td>{{voiceFrequency}}</td>
              <td>{{electricalPowerType}} / {{backupElectricalPowerType}}</td>
              <td>{{radioStyle}}</td>
              <td>{{transmitPower}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>    
      <br>
      <h2>Map of participants</h2>
    {{#if showMap}}
      <!-- map -->
      <div id="map"></div>
      <!-- map -->
      <script>
          var map = L.map('map').setView([{{latitude}}, {{longitude}}], 13).fitBounds([[{{minLatitude}}, {{minLongitude}}],[{{maxLatitude}}, {{maxLongitude}}]]);
          L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
              maxZoom: 19,
              attribution: '&copy; {Link: OpenStreetMap https://www.openstreetmap.org/copyright} contributors'
          }).addTo(map);

          var latsi = "{{latString}}".split('{{itemSeperator}}');
          let lonsi = "{{lonString}}".split('{{itemSeperator}}');
          let texti = "{{labelString}}".split('{{itemSeperator}}');
          let titlei = "{{titleString}}".split('{{itemSeperator}}');

          for (let i = 0; i < {{itemCount}}; i++) {
              L.circleMarker([latsi[i], lonsi[i]], {title: titlei[i], radius:2 }).bindPopup(texti[i]).addTo(map);
              L.tooltip([latsi[i], lonsi[i]], {content: titlei[i], permanent: true}).addTo(map);
          }
      </script>
      <!-- map -->
    {{else}}
      <h3>No participants to show.</h3>
    {{/if}}
    </div>
    <div class="grid-item">
    <h2>Actions</h2>
      <a class="block" href="/net-message/{{net.callsign}}">Send message</a>
      <a class="block" href="/net-edit/{{net.callsign}}">Edit</a>
      <a class="block" href="/net-end/{{net.callsign}}">Secure net</a>
      <br>
    <h2>Messages ({{messagesCount}})</h2>
      <table id="message-list">
        <thead>
          <tr>
            <th>Time</th>
            <th>From</th>
            <th>To</th>
            <th>Message</th>
            <th>Bulletin</th>
          </tr>
        </thead>
        <tbody>
          {{#each messages}}
            <tr id="{{id}}">
              <td>{{prettyHeardTime}}</td>
              <td>{{callsignFrom}}</td>
              <td>{{callsignTo}}</td>
              <td>{{message}}</td>
              <td>{{bulletin}} {{groupBulletin}} {{announcement}} {{NWSBulletin}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>    
    </div>
  <!-- end grid -->
  </div>

  </div>
</div>

</body>
</html>