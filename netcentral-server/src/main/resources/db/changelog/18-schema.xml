<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet id="18" author="kc1vmz">
    <createTable tableName="net_question">
      <column name="net_question_id" type="VARCHAR(36)">
        <constraints nullable="false" unique="true" primaryKey="true" primaryKeyName="net_questionPK"/>
      </column>
      <column name="completed_net_id" type="VARCHAR(36)">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="number" type="INT">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="asked_time" type="DATETIME">
        <constraints nullable="false"/>
      </column>
      <column name="active" type="TINYINT">
        <constraints nullable="false"/>
      </column>
      <column name="reminder_minutes" type="INT">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="question_text" type="VARCHAR(50)">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="next_reminder_time" type="DATETIME">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <createTable tableName="net_question_answer">
      <column name="net_question_answer_id" type="VARCHAR(36)">
        <constraints nullable="false" unique="true" primaryKey="true" primaryKeyName="net_question_answerPK"/>
      </column>
      <column name="net_question_id" type="VARCHAR(36)">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="completed_net_id" type="VARCHAR(36)">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="answered_time" type="DATETIME">
        <constraints nullable="false"/>
      </column>
      <column name="callsign" type="VARCHAR(20)">
        <constraints nullable="false" unique="false"/>
      </column>
      <column name="answer_text" type="VARCHAR(50)">
        <constraints nullable="false" unique="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>